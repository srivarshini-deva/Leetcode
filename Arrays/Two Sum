class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        unordered_map<int,int> hm;
        for(int i=0; i<nums.size(); i++){
            int req = target - nums[i];
            if(hm.find(req) != hm.end())
                return {hm[req], i};
            hm[nums[i]] = i;  // 2, 0 
        }
        return {-1,-1};
    }
};
